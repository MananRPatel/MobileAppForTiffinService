<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBkColor"
    android:orientation="vertical"
    tools:context=".activitys.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/mainprofile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#9DD7FF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="15dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:translationZ="1dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/man"
                android:contentDescription="@string/dsec" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/baloo"
                android:padding="20dp"
                android:text="@string/profile"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="#00000000"
                android:fontFamily="@font/baloo"
                android:padding="15dp"
                android:text="@string/expand"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/mainseller"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#FF98C5"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:translationZ="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:padding="25dp"
                android:text="Seller"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:fontFamily="@font/baloo"
                android:padding="13dp"
                android:text="@string/expand"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-20dp"
                android:src="@drawable/shop_bag"
                android:contentDescription="@string/dsec" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/mainbuyer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#00BCD4"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:translationZ="1dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/shopping_cart"
                android:contentDescription="@string/dsec" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/baloo"
                android:padding="15dp"
                android:text="@string/buyer"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="end|bottom"
                android:background="#00000000"
                android:fontFamily="@font/baloo"
                android:padding="15dp"
                android:text="@string/expand"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/maindelivery"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#FDD08D"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:translationZ="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:padding="15dp"
                android:text="@string/delivery"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:fontFamily="@font/baloo"
                android:padding="10dp"
                android:text="@string/expand"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="-25dp"
                android:layout_marginEnd="-5dp"
                android:src="@drawable/express_delivery"
                android:contentDescription="@string/dsec" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>