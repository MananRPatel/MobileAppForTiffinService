        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/confirm_bg3"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="#4CAF50"
            android:outlineSpotShadowColor="#4CAF50"
            android:translationY="-30dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout8"
            app:layout_constraintWidth_percent=".28"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/act_tm_foodweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/TextView"
                android:textAlignment="center"
                android:textColor="#00E676"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/act_tm_layout_rating"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/confirm_bg2"
            android:elevation="5dp"
            android:outlineAmbientShadowColor="#FFF"
            android:outlineSpotShadowColor="#000"
            android:translationY="-30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout8"
            app:layout_constraintWidth_percent=".5"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/act_tm_avg_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:paddingStart="10dp"
                android:text="@string/TextView"
                android:textColor="#000"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout8"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/confirm_bg4"
            android:elevation="7dp"
            android:outlineAmbientShadowColor="#E91E63"
            android:outlineSpotShadowColor="#E91E63"
            android:translationY="-30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
            app:layout_constraintWidth_percent=".45"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/act_tm_deliverytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/TextView"
                android:textColor="#FF1744"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#B7E483"
            android:elevation="7dp"
            android:outlineAmbientShadowColor="#673AB7"
            android:outlineSpotShadowColor="#673AB7"
            android:translationY="-30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_tm_layout_rating"
            app:layout_constraintWidth_percent=".35"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/act_tm_totalorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="@string/TextView"
                android:textColor="#198E1D"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:focusable="true"
            app:boxStrokeColor="@color/appFont"
            app:boxStrokeErrorColor="@color/danger"
            app:boxStrokeWidth="3dp"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@color/dark_green"
            app:hintTextColor="@color/conform_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout9">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/act_tm_neworder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter new tiffin order"
                android:inputType="numberSigned"
                android:textSize="17dp" />


        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/act_tm_set_order"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/conform_button_background"
            android:elevation="6dp"
            android:fontFamily="@font/montserrat"
            android:shadowColor="#F44336"
            android:shadowDx="0"
            android:shadowDy="100"
            android:text="Set Order"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textInputLayout"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout"
            app:layout_constraintVertical_bias="0.51" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/act_tm_conform"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/conform_button_background"
                android:elevation="6dp"
                android:fontFamily="@font/montserrat"
                android:shadowColor="#F44336"
                android:shadowDx="0"
                android:shadowDy="100"
                android:text="Accepting Order"
                android:textColor="@color/whiteTextColor"
                android:textStyle="bold"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/act_tm_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/cancel_order"
                android:elevation="2dp"
                android:fontFamily="@font/montserrat"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="#F44336"
                android:shadowDx="0"
                android:shadowDy="100"
                android:text="Stop Accepting Order"
                android:textColor="@color/whiteTextColor"
                android:textStyle="bold"
                android:translationZ="2dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/act_tm_conform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/act_tm_conform"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
        <Button
            android:id="@+id/act_tm_conform2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_submit_button"
            android:elevation="6dp"
            android:fontFamily="@font/montserrat"
            android:shadowColor="#F44336"
            android:shadowDx="0"
            android:shadowDy="100"
            android:text="Accepting Order"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold"
            android:translationZ="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/act_tm_cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/cancel_order"
            android:elevation="2dp"
            android:visibility="gone"
            android:fontFamily="@font/montserrat"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="#F44336"
            android:shadowDx="0"
            android:shadowDy="100"
            android:text="Not Accepting Order"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold"
            android:translationZ="2dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/act_tm_conform2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/act_tm_conform2"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>