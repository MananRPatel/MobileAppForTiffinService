<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E787"
    android:id="@+id/act_dc_scroll"
    tools:context=".activitys.TiffinModify">


    <!--        app:layout_constraintTop_toBottomOf="@+id/relativeLayout7" />-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">


        <ImageButton
            android:id="@+id/act_tm_ratingreview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="64dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:elevation="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/act_review_avg_review"
            app:layout_constraintBottom_toBottomOf="@+id/act_tm_layout_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/act_tm_layout_rating"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout8" />

        <ImageView
            android:id="@+id/act_tm_foodphoto"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:srcCompat="@drawable/deliveryman" />

        <ImageView
            android:layout_width="50dp"
            android:id="@+id/act_tm_back_button"
            android:layout_height="50dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="15dp"
            android:src="@drawable/arrow_back"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            app:layout_constraintBottom_toBottomOf="@+id/act_tm_foodphoto"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/confirm_bg"
            android:elevation="15dp"
            android:outlineAmbientShadowColor="#00BCD4"
            android:outlineSpotShadowColor="#00BCD4"
            android:translationY="-30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_tm_foodphoto"
            app:layout_constraintWidth_percent=".8"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/act_tm_foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/TextView"
                android:textColor="#B5000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/act_tm_foodname"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent=".9" />

            <TextView
                android:id="@+id/act_tm_sellerfoodinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/TextView"
                android:textAlignment="viewEnd"
                android:textColor="#095D6A"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.034"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintVertical_bias="0.542"
                tools:ignore="SmallSp" />

            <!--        <TextView-->
            <!--            android:id="@+id/scusername"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_marginEnd="24dp"-->
            <!--            android:text="Delivery"-->
            <!--            android:fontFamily="@font/coustard"-->
            <!--            android:textColor="#000"-->
            <!--            android:textSize="25sp"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            app:layout_constraintTop_toTopOf="parent" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--    <com.airbnb.lottie.LottieAnimationView-->
        <!--        android:id="@+id/animationView3"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        android:elevation="100dp"-->
        <!--        app:lottie_rawRes="@raw/delivery"-->
        <!--        tools:ignore="MissingConstraints" />-->


        <!--        <TextView-->
        <!--            android:id="@+id/act_dc_foodname"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="5dp"-->
        <!--            android:fontFamily="@font/artifika"-->
        <!--            android:text="@string/TextView"-->
        <!--            android:textAlignment="center"-->
        <!--            android:textColor="#884A6F"-->
        <!--            android:textSize="18sp"-->
